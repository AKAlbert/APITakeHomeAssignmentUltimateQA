{
  "name": "api-testing-framework-ultimateqa",
  "version": "1.0.0",
  "description": "Enterprise-grade API testing framework with TypeScript, Playwright, and comprehensive test management",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:all": "npm run test:functional && npm run test:integration && npm run test:advanced",
    "test:functional": "npx playwright test src/tests/functional --reporter=html",
    "test:integration": "npx playwright test src/tests/integration --reporter=html",
    "test:advanced": "npx playwright test src/tests/advanced --reporter=html",
    "test:parallel": "npx playwright test --workers=3",
    "test:debug": "npx playwright test --debug",
    "test:headed": "npx playwright test --headed",
    "test:trace": "npx playwright test --trace=on",
    "test:smoke": "npx playwright test --grep=\"@smoke\" --reporter=list",
    "test:critical": "npx playwright test --grep=\"@critical\" --reporter=list",
    "report": "npx playwright show-report",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:fallback": "eslint src/**/*.ts --config .eslintrc.fallback.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf test-results playwright-report logs",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "install:browsers": "npx playwright install --with-deps",
    "setup": "npm install && npm run install:browsers",
    "deploy:dev": "./scripts/deploy.sh -e development -v main",
    "deploy:staging": "./scripts/deploy.sh -e staging -v main",
    "deploy:prod": "./scripts/deploy.sh -e production",
    "rollback:dev": "./scripts/rollback.sh -e development",
    "rollback:staging": "./scripts/rollback.sh -e staging",
    "rollback:prod": "./scripts/rollback.sh -e production",
    "smoke:dev": "./scripts/smoke-tests.sh -e development",
    "smoke:staging": "./scripts/smoke-tests.sh -e staging",
    "smoke:prod": "./scripts/smoke-tests.sh -e production",
    "docker:build": "docker build -f docker/Dockerfile -t api-tests .",
    "docker:dev": "docker-compose -f docker/docker-compose.yml --profile development up",
    "docker:staging": "docker-compose -f docker/docker-compose.yml --profile staging up",
    "docker:prod": "docker-compose -f docker/docker-compose.yml --profile production up",
    "docker:ci": "docker-compose -f docker/docker-compose.yml --profile ci up",
    "docker:down": "docker-compose -f docker/docker-compose.yml down"
  },
  "keywords": [
    "api-testing",
    "playwright",
    "typescript",
    "automation",
    "testing-framework"
  ],
  "author": "Albert AK",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@faker-js/faker": "^9.8.0",
    "dotenv": "^16.5.0",
    "winston": "^3.11.0"
  }
}
